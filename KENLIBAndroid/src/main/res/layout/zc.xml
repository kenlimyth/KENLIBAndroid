<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/h1"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="0dp" >
    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:padding="0dp" >

        <EditText
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bottom"
            android:hint="用户名"
            android:padding="10dp" />

        <EditText
            android:id="@+id/pswd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/border_bottom"
            android:hint="密码"
            android:inputType="number"
            android:padding="10dp"
            android:password="true" />
        <EditText
            android:id="@+id/pswd1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/border_bottom"
            android:hint="确认密码"
            android:inputType="number"
            android:padding="10dp"
            android:password="true" />
        
    
        <FrameLayout  
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/tel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/border_bottom"
            android:hint="手机号"
            android:padding="10dp"
             />
            <Button
        android:id="@+id/fdx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
      
        android:padding="5dp"
        android:background="@drawable/round_5"
        android:layout_gravity="right|center_vertical"
        android:gravity="center"
        android:text="发送验证码"
        android:textColor="#fff"
        android:textSize="15dp" android:layout_marginRight="10dp" />
        </FrameLayout>
         <EditText
            android:id="@+id/yzm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/border_bottom"
            android:hint="验证码"
            android:padding="10dp"
             />

        
        <TextView  android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_marginTop="30dp"
            android:text="点击注册表示同意用户协议"
            android:gravity="center"
            android:textSize="15dp"
            />
    <Button
        android:id="@+id/btn"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
       
        android:layout_margin="10dp"
        
        android:background="@drawable/round_5"
        android:gravity="center"
        android:text="注册"
        android:textColor="#fff"
        android:textSize="20dp" />
    </LinearLayout>

   

</LinearLayout>